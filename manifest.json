{
    "manifest_version": 2,

    "name": "Signal",
    "short_name": "Signal",
    "description": "Private Messenger",
    "version": "0.0.1",
    "offline_enabled": false,
    "minimum_chrome_version": "37",

    "permissions": [
      "unlimitedStorage",
      "notifications",
      "fileSystem",
      "alarms"
    ],

    "icons": {
      "16": "images/icon_16.png",
      "32": "images/icon_32.png",
      "48": "images/icon_48.png",
      "128": "images/icon_128.png"
    },

    "app": {
      "background": {
          "page": "background.html"
      }
    }
}
